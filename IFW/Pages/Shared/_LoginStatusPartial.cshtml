@if(User.Identity.IsAuthenticated)
{
    <form method="post" class="form-check-inline" asp-page="/Account/Logout">
        Welcome @User.Identity.Name
        <button type="submit" class="ml-2 btn btn-link">Logout</button>
    </form>
}
else
{
        <a class="nav-link text-dark" asp-area="" asp-page="/Account/Login">Login</a>
}