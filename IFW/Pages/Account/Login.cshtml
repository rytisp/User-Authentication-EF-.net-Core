@page
@model IFW.Pages.Account.LoginModel
@{
}
<div class="container border p-5">
    <form method="post">

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <div class="input-group row mb-2">
            <div class="col-md-2">
                <label asp-for="Credential.UserName"></label>
            </div>
            <div class="col-md-5">
                <input type="text" value="rytis" asp-for="Credential.UserName" class="form-control" />
            </div>
            <div class="col-md-3">
            <span class="text-danger" asp-validation-for="Credential.UserName"></span>
            </div>
        </div>

        <div class="input-group row mb-2">
            <div class="col-md-2">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-md-5">
                <input type="password" value="www" asp-for="Credential.Password" class="form-control"/>
             </div>
            <div class="col-md-3">
            <span class="text-danger" asp-validation-for="Credential.Password"></span>
            </div>
         </div>

         <div class="input-group row form-check mb-2">
            <div class="col-md-2">

            </div>
            <div class="col-md-5">
                <input type="checkbox" asp-for="Credential.RememberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="Credential.RememberMe"></label>
            </div>
         </div>
        
         <div class="input-group row">
            <div class="col-md-2">

            </div>
            <div class="col-md-5">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </div>

    </form>
</div>